# -----------------------------
# Skosmos v3 main configuration
# Version: 1.0.3 2026-02-07
# -----------------------------

:config a skosmos:Configuration ;
    # SPARQL endpoint
    #skosmos:sparqlEndpoint <http://localhost:3030/> ;
    skosmos:sparqlEndpoint <http://host.docker.internal:3030/skosmos> ;
    #skosmos:sparqlEndpoint <http://host.docker.internal:8088/> ;
    ## You must setup a proxy when enabled:
    #skosmos:baseHref "https://test.medvik.cz/skosmos/" ;
    skosmos:customCss "resource/css/mdv-skosmos-custom.css" ;
    skosmos:sparqlDialect "JenaText" ;
    skosmos:sparqlCollationEnabled true ;
    skosmos:sparqlTimeout 20 ;
    skosmos:httpTimeout 5 ;
    skosmos:serviceName "Medvik-Skosmos" ;
    skosmos:uiLanguageDropdown true ;
    skosmos:uiHoneypotEnabled true ;
    skosmos:uiHoneypotTime 5 ;
    skosmos:logCaughtExceptions true ;
    skosmos:logBrowserConsole true ;
    skosmos:logFileName "/skosmos/logs/skosmos.log" ;
    skosmos:templateCache "/tmp/skosmos-template-cache" ;
    skosmos:feedbackAddress "medvik@nlk.cz" ;
    skosmos:feedbackSender "Medvik-Skosmos" ;
    skosmos:feedbackEnvelopeSender "" ;
    skosmos:globalPlugins () ;
    skosmos:languages (
        [ rdfs:label "cs" ; rdf:value "cs_CZ.utf8" ]
        [ rdfs:label "en" ; rdf:value "en_GB.utf8" ]
        [ rdfs:label "es" ; rdf:value "es_ES.utf8" ]
        [ rdfs:label "fi" ; rdf:value "fi_FI.utf8" ]
        [ rdfs:label "fr" ; rdf:value "fr_FR.utf8" ]
        [ rdfs:label "it" ; rdf:value "it_IT.utf8" ]
    ) .

# -----------------------------
# MeSH-CZ SKOS Vocabulary
# -----------------------------

:meshcz a skosmos:Vocabulary, void:Dataset ;
    dc:title "Medical Subject Headings CZ"@en ;
    skosmos:shortName "MeSH-CZ" ;
    void:uriSpace "http://mesh.medvik.cz/" ;
    void:dataDump <https://github.com/NLK-NML/MeSH-CZ-RDF/raw/refs/heads/main/meshcz/2026/meshcz-skos.ttl.gz> ;
    skosmos:language "cs", "en" ;
    skosmos:defaultLanguage "cs" ;
    skosmos:fallbackLanguages "en" ;
    skosmos:showTopConcepts true ;
    skosmos:defaultSidebarView "hierarchy" ;
    skosmos:sidebarViews ( "hierarchy" ) ;
    skosmos:showDeprecated true ;
    skosmos:showNotation false ;
    skosmos:showStatistics false ;
    skosmos:searchByNotation true ;
    skosmos:sortByNotation true ;
    skosmos:loadExternalResources false ;
    skosmos:externalProperty (mesht:extUrl foaf:page foaf:homepage) ;
    skosmos:hasMultiLingualProperty skos:notation ;
    skosmos:sparqlGraph <http://mesh.medvik.cz/> .

<https://github.com/NLK-NML/MeSH-CZ-RDF/raw/refs/heads/main/meshcz/2026/meshcz-skos.ttl.gz>
    dc:format "text/turtle" ;
    dc:language "en" .


